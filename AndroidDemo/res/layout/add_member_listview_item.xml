<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp" >

    <com.liuyunlong.androiddemo.widget.RoundImageView
        android:id="@+id/add_member_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/daughter" />

    <TextView
        android:id="@+id/add_member_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/add_member_icon"
        android:text="名字" />

    <TextView
        android:id="@+id/add_member_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_member_username_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/add_member_icon"
        android:text="电话"
        android:textColor="@color/gray_level_3" />

</RelativeLayout>