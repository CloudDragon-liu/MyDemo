<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/main_item_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="@dimen/gap_10"
        android:src="@drawable/main_item_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_10"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/gap_5" >

        <TextView
            android:id="@+id/main_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:id="@+id/main_item_brief_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_5"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/gray_level_4" />
    </LinearLayout>

</LinearLayout>